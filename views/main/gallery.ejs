<% layout('layouts/mainBoilerplate')%>
    <main class="main-container d-flex gallery">
        <div id="blur-overlay" class="hidden"></div>
        <section class="hero-banner hero-4 d-flex">
            <h1 class="hero-title">Gallery</h1>
        </section>
        <article class="general-article d-flex b">
            <h4 class="subhead-text no-margin w-90">Photos</h4>
            <h2 class="head-title no-margin w-90">See Some of <br id="mobile-b"> Our Work</h2>
            <p class="section-text no-margin w-90">consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                labore
                et dolore magna aliqua. Neque convallis a cras semper auctor neque. Ullamcorper velit sed ullamcorper
                morbi.
                Nisl suscipit adipiscing bibendum est ultricies integer quis.</p>
            <% for (const [index, img] of images.entries()) { %>
                <% if(index < 3) {%>
                    <section class="gallery-img w-90">
                        <img class="g-prev-img" src="<%= img.image %><%= size %>" alt="gallery-image">
                    </section>
                    <% } else { %>
                        <section class="gallery-img w-90 blur-load" style="background-color: #BD7655;">
                            <img class="g-prev-img lazy" src="<%= img.image %>?tr=w-400,h-300,bl-30,q-50"
                                data-src="<%= img.image %><%= size %>" alt="gallery-image">
                        </section>
                        <% } %>
                            <% } %>
                                <a href="/contact" class="btn-style d-flex">Contact Us</a>
                                <button id="to-top-btn" class="subhead-text no-margin w-90">^ Back to the top ^</button>
        </article>
    </main>
    <aside class="full-screen-w">
        <button class="close-w-btn d-flex">
            <img class="i-prev-icon" src="/images/x-solid.svg" width="100%" height="100%" alt="check-icon">
        </button>
        <img class="full-screen-img" src="" alt="full-screen image">
    </aside>