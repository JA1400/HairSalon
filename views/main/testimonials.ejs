<% layout('layouts/mainBoilerplate')%>
    <main class="main-container d-flex">
        <div id="blur-overlay" class="hidden"></div>
        <section class="hero-banner hero-5 d-flex">
            <h1 class="hero-title">Testimonials</h1>
        </section>
        <article class="general-article split-article d-flex">
            <section class="two-column d-flex split-section testi-section">
                <h4 class="subhead-text no-margin w-90">Words From Our Clients</h4>
                <h2 class="head-title no-margin w-90">Valuable Client<br id="mobile-b">Feedback</h2>
